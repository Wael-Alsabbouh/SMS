<div >
	    <div class="row">
		<!-- sort by box -->
	    <div class="col-md-2 pull-right">
	    <label class="col-md-12 control-label pull-left" for="selectbasic">Show only</label>
		    <select id="selectbasic" name="selectbasic" class="form-control col-md-4" ng-model="filterByRole">
		      <option value="">ÙAll</option>    
              <option value="student">Students</option>
		      <option value="mentor">Mentors</option>
		      <option value="admin">Admins</option>
		    </select>
	  	</div>
		<!-- END sort by box -->

		<!-- Search box -->
	<form class="navbar-form col-md-4" role="search">
	    <div class="input-group add-on">
	      <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text" ng-model="search">
	      <div class="input-group-btn">
	       <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
	      </div>
	    </div>
	 </form >
  		<!-- END Search box -->
        <div class="col-md-12">
        <div class="table-responsive">
              <table id="mytable" class="table table-bordred table-striped table-hover" ng-controller="mainController">
                   <thead>
                  	   <th class="clickable-th" ng-click="sort('userId')">ID
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userId'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
	                   <th>Image</th>
                       <th class="clickable-th" ng-click="sort('userFirstName')">Name
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userFirstName'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userLastName')">Last Name
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userLastName'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userAddress')">Address
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userAddress'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userRegisterDate')">Reg Date
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userRegisterDate'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userEmail')">Email
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userEmail'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userMobile')">Mobile Number
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userMobile'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userRole')">Role
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userRole'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userClass')">Class
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userClass'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
                       <th class="clickable-th" ng-click="sort('userStatus')">Status
                            <span class="glyphicon sort-icon" ng-show="sortKey=='userStatus'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}">
                            </span>
                        </th>
	                   <th>Edit</th>
	                   <th>Delete</th>
                   </thead>
    <tbody>
	    <tr dir-paginate="user in usersData|filter:filterByRole|itemsPerPage:5|filter:search | orderBy: sortKey:reverse">
		    <td>{{user.userId}}</td>
		    <td><img class='profile-img' ng-src="data:image/PNG;base64,{{user.userPhoto}}"></td>
		    <td>{{user.userFirstName}}</td>
		    <td>{{user.userLastName}}</td>
		    <td>{{user.userAddress}}</td>
		    <td>{{user.userRegisterDate| date:'dd/MM/yyyy'}}</td>
		    <td>{{user.userEmail}}</td>
		    <td>{{user.userMobile}}</td>
		    <td>{{user.userRole}}</td>
		    <td>{{user.userClass}}</td>
            <td>{{user.userStatus}}</td>
		    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xl" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>

		    <td ng-controller="mainController"><p data-placement="top" data-toggle="tooltip" title="Delete">
		    	    <a href="../users/delete/{{user.userId}}">
		    	    	<button class="btn btn-danger btn-xl" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button>
		    	    </a>
		    </p></td>
	    </tr>
	    
    </tbody>          
</table>
		<div class='whatever'>
            <div class="insert_btn_container">
                <td><p data-placement="top" data-toggle="tooltip" title="invite">
                <button class="btn btn-primary btn-success" data-title="Add" data-toggle="modal" data-target="#invite"><span class="fa fa-paper-plane"></span> Invite new User</button></p>
                </td>
            </div>
            <div class="insert_btn_container">
                <td><p data-placement="top" data-toggle="tooltip" title="Add">
                <button class="btn btn-primary btn-success" data-title="Add" data-toggle="modal" data-target="#add"><span class="glyphicon glyphicon-plus"></span> Add new User</button></p>
                </td>
            </div>

            <dir-pagination-controls
                max-size="5"
                direction-links="true"
                boundary-links="true">
            </dir-pagination-controls>
        </div>  
        </div>
            
       </div>
	</div>
</div>