<html ng-app="sms_app">
    <head>
        <title><%=(locals.title) ? title :''%></title>
    	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
 		<script src="https://code.angularjs.org/1.5.8/angular-route.min.js"></script> 
 		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
 		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
 		<script src="js/smsapp.js"></script>
 		<link rel="stylesheet" type="text/css" href="css/style.css">
		<script src="./js/js.js"></script> 
    </head>
    <body>
       
<%- include layouts/header.ejs %>


<div class="container">
	    <div class="row">
		<!-- sort by box -->
	    <div class="col-md-4 pull-right">
	    <label class="col-md-4 control-label" for="selectbasic">Sort by</label>
		    <select id="selectbasic" name="selectbasic" class="form-control">
		      <option value="1">Students</option>
		      <option value="2">Mentors</option>
		      <option value="3">Groups</option>
		    </select>
	  	</div>
		<!-- END sort by box -->

		<!-- Search box -->
	<form class="navbar-form" role="search">
	    <div class="input-group add-on">
	      <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text" ng-model="search">
	      <div class="input-group-btn">
	       <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
	      </div>
	    </div>
	 </form >
  		<!-- END Search box -->
        <div class="col-md-12">
        <div class="table-responsive">
              <table id="mytable" class="table table-bordred table-striped">
                   <thead>
                  	   <th>ID</th>
	                   <th>Image</th>
	                   <th>First Name</th>
	                   <th>Last Name</th>
	                   <th>Address</th>
	                   <th>Register Date</th>
	                   <th>Email</th>
	                   <th>Mobile Number</th>
	                   <th>Role</th>
	                   <th>Group Number</th>
	                   <th>Edit</th>
	                   <th>Delete</th>
                   </thead>
    <tbody ng-controller="mainController">
	    <tr ng-repeat="user in usersData | filter:search | orderBy: 'userFirstName'">
		    <td>{{user.userId}}</td>
		    <td><img class='profile-img' ng-src="https://cdn4.iconfinder.com/data/icons/boy-hair-and-face/100/face6-512.png"></td>
		    <td>{{user.userFirstName}}</td>
		    <td>{{user.userLastName}}</td>
		    <td>{{user.userAddress}}</td>
		    <td>{{user.userRegisterDate}}</td>
		    <td>{{user.userEmail}}</td>
		    <td>{{user.userMobile}}</td>
		    <td>{{user.userRole}}</td>
		    <td>{{user.userClass}}</td>
		    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xl" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>

		    <td ng-controller="mainController"><p data-placement="top" data-toggle="tooltip" title="Delete">
		    	    <a href="../users/delete/{{user.userId}}">
		    	    	<button class="btn btn-danger btn-xl" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button>
		    	    </a>
		    </p></td>
	    </tr>
	    <%- include /edit_user.ejs %>
    </tbody> 
</table>

		<div class="clearfix"></div>
		<ul class="pagination pull-right">
		  <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
		  <li class="active"><a href="#">1</a></li>
		  <li><a href="#">2</a></li>
		  <li><a href="#">3</a></li>
		  <li><a href="#">4</a></li>
		  <li><a href="#">5</a></li>
		  <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
		</ul>
		<!-- <a href="#" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus"></span> Add User</a> -->
		<td><p data-placement="top" data-toggle="tooltip" title="Add">
		<button class="btn btn-primary btn-success" data-title="Add" data-toggle="modal" data-target="#add"><span class="glyphicon glyphicon-plus"></span>Add User</button></p>
		</td> 

        </div>
            
       </div>
	</div>
</div>

    

    



<%- include /del_user.ejs %>

<%- include /add_user.ejs %>

<%- include layouts/footer.ejs %>

</body>
</html>








 
